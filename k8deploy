apiVersion: v1
kind: Namespace
metadata:
  name: nurse-staffing

---
apiVersion: v1
kind: Secret
metadata:
  name: mongo-atlas-secret
  namespace: nurse-staffing
type: Opaque
stringData:
  MONGODB_URI: "mongodb+srv://admin:admin123@mongodb-demo.p1jch.mongodb.net/?retryWrites=true&w=majority&appName=mongodb-demo"

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend
  namespace: nurse-staffing
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nurse-backend
  template:
    metadata:
      labels:
        app: nurse-backend
    spec:
      containers:
        - name: backend
          image: nurse-backend:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 4000
          env:
            - name: MONGODB_URI
              valueFrom:
                secretKeyRef:
                  name: mongo-atlas-secret
                  key: MONGODB_URI
            - name: SMTP_HOST
              value: ""
            - name: SMTP_PORT
              value: "587"
            - name: SMTP_USER
              value: ""
            - name: SMTP_PASS
              value: ""

---
apiVersion: v1
kind: Service
metadata:
  name: backend
  namespace: nurse-staffing
spec:
  selector:
    app: nurse-backend
  ports:
    - port: 4000
      targetPort: 4000
  type: ClusterIP

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: frontend
  namespace: nurse-staffing
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nurse-frontend
  template:
    metadata:
      labels:
        app: nurse-frontend
    spec:
      containers:
        - name: frontend
          image: nurse-frontend:latest
          imagePullPolicy: IfNotPresent
          ports:
            - containerPort: 80

---
apiVersion: v1
kind: Service
metadata:
  name: frontend
  namespace: nurse-staffing
spec:
  selector:
    app: nurse-frontend
  ports:
    - port: 80
      targetPort: 80
  type: LoadBalancer
